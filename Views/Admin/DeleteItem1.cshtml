@model MvcApplication2.Models.Item

@{
    ViewBag.Title = "DeleteItem1";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}
   @section Title
             {
                 <title>Food &amp; Home Page</title>
                 
                 }       

@section Header
{
    
    <a href="~/Home"><img src="~/images/logo.png" alt="Logo"></a>
    
      

    }  
@section Content
{
    <form action="/Admin/DeleteItem2/@ViewBag.X.IID">
<div id="content" class="float_r">
        	
            <h5>Delete product </h5>
            <div class="content_half float_l checkout">
                <img src="~/Files/@ViewBag.X.Path" alt="" width="20%" height="20%"/><br />
                <br />
		
             	 Product ID :  
                  <input type="text" id="nameofproduct"  name="nameofproduct" value="@ViewBag.X.IID" style="width:300px;"  />
                <br />
                <br />
                Product Name :  
                  <input type="text" id="n"  name="n" value="@ViewBag.X.Name" style="width:300px;"  />
                <br />
                <br />
               Product quantity:
				<input type="text" id="q" name="q" value="@ViewBag.X.Quantity" style="width:300px;"  />
                <br />
                <br />
              Product price:
                <input type="text"  id="p" name="p" value="@ViewBag.X.Price" style="width:300px;"  />
                <br />
                <br />
              
           <input type="submit" class="submit_btn" name="submit" id="submit" value="Delete product" />
                       
                 

            </div>
       </form>

    } 
	
	
   