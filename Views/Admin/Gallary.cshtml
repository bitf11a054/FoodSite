<link rel="stylesheet" href="~/Content/jquery.fancybox.css?v=2.1.4" type="text/css" media="screen" />
<script type="text/javascript" src="~/Scripts/jquery.fancybox.js?v=2.1.4"></script>

@foreach(var x in ViewBag.X)
{
 
<a class="fancybox" href="~/Files/@x.Path" alt="">
      <img src="~/Files/@x.Path" alt=""/></a>
}

     
<script type='text/javascript'>
    $(document).ready(function () {
        /* This is basic - uses default settings */
        $("a#single_image").fancybox();

        /* Using custom settings */
        $("a#inline").fancybox({
            'hideOnContentClick': true
        });

        /* Apply fancybox to multiple items */
        $("a.group").fancybox({
            'transitionIn': 'elastic',
            'transitionOut': 'elastic',
            'speedIn': 600,
            'speedOut': 200,
            'overlayShow': false
        });
    });
</script> 
<script>
    // Activate fancyBox
    $(".fancybox")
        .attr('rel', 'gallery')
        .fancybox({
            padding: 0
        });

 </script>
       <script>
           // Launch fancyBox on first element
           $(".fancybox").eq(0).trigger('click');
    </script>
            }
            

            

